{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "ZKO_20XX",
	"version": "0.1.3",
	"identifier": "ZKO20XX",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "ZKO_20XX",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["app", "dmg", "nsis", "msi", "deb", "appimage"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["binaries/my-sidecar"]
	}
}
