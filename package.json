{
	"name": "svelte-app",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:coverage": "vitest --run --coverage",
		"lighthouse:setup": "npm run build && npm run preview",
		"lighthouse:test": "lighthouse http://localhost:4173 --only-categories=performance --view --preset=desktop",
		"lighthouse": "echo Install lighthouse globally with npm install -g lighthouse > Host production build with npm run lighthouse:setup > npm run lighthouse:test",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"lint-format": "biome check --write",
		"lint-error": "biome check --diagnostic-level=error"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@melt-ui/pp": "^0.3.2",
		"@skeletonlabs/skeleton": "^3.1.3",
		"@skeletonlabs/skeleton-svelte": "^1.2.3",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/cli": "^4.1.11",
		"@tailwindcss/vite": "^4.1.11",
		"@tauri-apps/cli": "^2.6.2",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.10.1",
		"@vitest/browser": "^3.2.3",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@aptabase/tauri": "github:aptabase/tauri-plugin-aptabase",
		"@lucide/svelte": "^0.542.0",
		"@skeletonlabs/tw-plugin": "^0.4.1",
		"@tauri-apps/api": "^2.8.0",
		"@tauri-apps/plugin-fs": "^2.4.4",
		"@tauri-apps/plugin-process": "^2.3.0",
		"@tauri-apps/plugin-shell": "^2.3.0",
		"@tauri-apps/plugin-store": "^2.3.0",
		"socket.io-client": "^4.8.1"
	}
}
